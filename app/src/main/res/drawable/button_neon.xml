<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Academic Blue Gradient -->
    <gradient
        android:angle="135"
        android:startColor="#FF6200EE"
        android:centerColor="#1A4B8C"
        android:endColor="#FF6200EE"
        android:type="linear" />

    <stroke
        android:width="3dp"
        android:color="#D4AF37"
    android:dashWidth="8dp"
    />

    <!-- Elegant Corners -->
    <corners android:radius="18dp" />


    <padding
        android:left="1dp"
        android:top="1dp"
        android:right="1dp"
        android:bottom="1dp" />
</shape>